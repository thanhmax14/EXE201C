                                            imgElement.id = 'hotel-img-' + index; // Đặt ID cho ảnh của khách sạn

                                            const imgTag = document.createElement('img');
                                            imgTag.src = e.target.result;
                                            imgTag.alt = 'Img';

                                            const trashIcon = document.createElement('span');
                                            trashIcon.classList.add('trash-icon', 'd-flex', 'align-items-center', 'justify-content-center', 'text-danger', 'gallery-trash');

                                            const icon = document.createElement('i');
                                            icon.classList.add('isax', 'isax-trash');
                                            trashIcon.appendChild(icon);

                                            imgElement.appendChild(imgTag);
                                            imgElement.appendChild(trashIcon);

                                            hotelGallery.appendChild(imgElement);
                                        };

                                        reader.readAsDataURL(file);
                                    }
                                });
                            });

