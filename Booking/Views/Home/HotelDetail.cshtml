            $.ajax({
                url: "@Url.Action("Sendcmt", "Account")",
                method: "POST",
                dataType: "json",
                data: {
                    rating: rating,
                    comment: comment,
                    id: idh,
                    __RequestVerificationToken: token
                },
                success: function (response) {
                    console.log("Phản hồi từ server:", response);

                    if (response.status === 'success') {
                        cuteToast({
                            type: "success",
                            message: response.msg,
                            timer: 5000
