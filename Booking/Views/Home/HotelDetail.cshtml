                        // Đóng modal
                        $('#add_review').modal('hide');

                        // Lưu trạng thái để sau khi reload trang sẽ tự động cuộn đến #reviews
                        localStorage.setItem("scrollToReviews", "true");

                        // Reload lại trang
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        Swal.fire("Thất bại", response.msg, "error");
                    }
