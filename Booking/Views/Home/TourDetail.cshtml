<script>
    $(document).ready(function () {      
        $("#book-now-btn").on("click", function () {
            let tourID = $("input[name='tourid']").val();
            let adults = $("input[name='adults']").val();
            let children = $("input[name='children']").val();
            let infants = $("input[name='infants']").val();

            // Tạo object chứa toàn bộ dữ liệu
            let bookingData = {
                tourID:tourID,
                guests: {
                    adults: adults,
                    children: children,
                    infants: infants
                }
            };

            console.log(bookingData); // Kiểm tra dữ liệu trước khi gửi

            $('#book-now-btn').html('<i class="fa fa-spinner fa-spin"></i> Đang xử lý...').prop('disabled', true);

            $.ajax({
                url: "/Account/ComfirmTour",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(bookingData),
                headers: {
                    "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.status == 'success') {
                        Swal.fire({
                            title: 'Thành công!',
                            text: 'Bạn sẽ được chuyển hướng đến trang thanh toán...',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed || result.isDismissed) {
                                window.location.href = response.url;
                            }
                        });
                    } else if (response.notAuth) {
                        Swal.fire('Thất bại', response.msg, 'error');
                    } else if (response.notUpdate) {
                        Swal.fire({
                            title: 'Thất bại!',
                            text: response.msg,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed || result.isDismissed) {
                                window.location.href = "/account/Settings";
                            }
                        });
                    }
                    else {
                        Swal.fire('Thất bại', response.msg, 'error');
                    }
                    $('#book-now-btn').html('Book Now').prop('disabled', false);
                },
                error: function (err) {
                    Swal.fire('Thất bại', err, 'error');
                    $('#book-now-btn').html('Book Now').prop('disabled', false);
                }
            });
        });
    });

</script>

<script type="text/javascript">
    $(document).ready(function () {
        // Kiểm tra nếu có trạng thái cần cuộn đến #reviews sau khi reload
        if (localStorage.getItem("scrollToReviews") === "true") {
            localStorage.removeItem("scrollToReviews"); // Xóa trạng thái sau khi dùng
            setTimeout(function () {
                window.location.hash = "reviews";
            }, 100);

        }

        // Sử dụng document.on để đảm bảo sự kiện hoạt động ngay cả khi modal tạo động
        $(document).on("click", "#btnCmt", function (e) {
            e.preventDefault();

            var rating = $("input[name='rating']:checked").val();
            var comment = $("#txtReview").val();
            var idh = $("#idh").val();
            var token = $('input[name="__RequestVerificationToken"]').val(); // Lấy CSRF token

            if (!rating || !comment.trim()) {
                Swal.fire("Lỗi", "Vui lòng chọn số sao và nhập đánh giá!", "error");
                return;
            }

            console.log("Đang gửi AJAX...", { rating, comment, token });

            $('#btnCmt').html('<i class="fa fa-spinner fa-spin"></i> Đang gửi...').prop('disabled', true);

            $.ajax({
                url: "@Url.Action("SendcmtTour", "Account")",
                method: "POST",
                dataType: "json",
                data: {
                    rating: rating,
                    comment: comment,
                    id: idh,
                    __RequestVerificationToken: token
                },
                success: function (response) {
                    console.log("Phản hồi từ server:", response);

                    if (response.status === 'success') {
                        cuteToast({
                            type: "success",
                            message: response.msg,
                            timer: 5000
                        });

                        // Đóng modal
                        $('#add_review').modal('hide');

                        // Lưu trạng thái để sau khi reload trang sẽ tự động cuộn đến #reviews
                        localStorage.setItem("scrollToReviews", "true");

                        // Reload lại trang
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        Swal.fire("Thất bại", response.msg, "error");
                    }
                    $('#btnCmt').html('Submit Review').prop('disabled', false);
                },
                error: function (xhr, status, error) {
                    console.log("Lỗi AJAX:", xhr.responseText);

                    cuteToast({
                        type: "error",
                        message: "Không thể gửi đánh giá. Vui lòng thử lại!",
                        timer: 5000
                    });
                    $('#btnCmt').html('Submit Review').prop('disabled', false);
                }
            });
        });
    });
</script>

